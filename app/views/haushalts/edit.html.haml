#main
  %h1 Eintrag ändern

  %table
    - form_for @haushalt, :url => {:action => "update"}, :html=> {:method => :put} do |f|
      %tr
        =f.text_field :rev
        %td
          Datum
        %td
          =f.text_field :datum
      %tr
        %td
          Kategorie
        %td
          =f.text_field :kategorie
        %td
          Betrag
        %td
          =f.text_field :betrag
      %tr
        %td
          =f.submit "Speichern"

  %p= link_to 'Zurück', haushalts_path